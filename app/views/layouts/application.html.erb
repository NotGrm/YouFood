    <div class="span3">
      <div class="well sidebar-nav">
        <ul class="nav nav-list">
          <li class="nav-header">Cat&eacute;gories</li>
          <% @categories.each do |category| %>
            <li><%= link_to category.name, "/categories/"+category.id.to_s %></li>
          <% end %>
        </ul>
      </div><!--/.well -->
    </div><!--/span-->

    <div class="span9">

<%= yield %>

    </div>
  </div><!--/row-->
</div><!--/.fluid-container-->

</body>
</html>
