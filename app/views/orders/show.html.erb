<%= render "categories/menu" %>
<div class="span9">
  <div class="page-header">
    <h1>Commande</h1>
  </div>
  <div class="row-fluid">
    <div class="btn-group pull-right">
      <p>
        <%= link_to "Passer commande", orders_pay_path, :class => "btn btn-primary" %>
      </p>
    </div>
