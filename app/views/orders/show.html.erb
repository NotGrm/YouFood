            <button class="btn btn-danger btn-mini dropdown-toggle" data-toggle="dropdown">Supprimer</button>
            <ul class="dropdown-menu">
              <li><%= link_to "Confirmer", orders_remove_line_path(:line_id => line) %></li>
              <li><a>Annuler</a></li>
            </ul>
          </div>
        </td>
      </tr>

      <% end %>

      </tbody>
    </table>
  </div>
</div>