        <th style="width: 10%;">Prix</th>
        <th style="width: 10%;">Quantit&eacute;</th>
        <th style="width: 1%;"></th>
      </tr>
      </thead>
      <tbody>

      <% @order.order_lines.each do |line| %>

      <tr>
        <td><%= line.dish.name %></td>
        <td><%= number_to_currency(line.dish.price_ht, :unit => "â‚¬", :format => "%n%u") %></td>
        <td><%= line.quantity %></td>
