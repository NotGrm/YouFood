<%= render "categories/menu" %>
<div class="span9">
  <div class="page-header">
    <h1>D&eacute;tails</h1>
  </div>
  <div class="row-fluid">
    <p>
      <a class="btn" href="javascript:history.back()"><i class="icon-circle-arrow-left"></i>&nbsp;Pr&eacute;cedent</a>
    </p>
  </div>
  <div class="row-fluid">
    <div class="span4">
      <div class="span12">
      <span class="thumbnail">
        <%= image_tag @dish.picture.url %>
      </span>
      </div>
    </div>
    <div class="span8">
      <h1><%= @dish.name %></h1>
      <h6>Prix HT <%= number_to_currency(@dish.price_ht, :unit => "€", :format => "%n%u") %></h6>
      <h6>Prix TTC <%= number_to_currency(@dish.price_ttc, :unit => "€", :format => "%n%u") %></h6>
      <p>
        <%= link_to "Commander", orders_add_dish_path(:dish_id => @dish), :class => "btn btn-primary" %>
      </p>
    </div>
  </div>
  <div class="row-fluid">
    <h3>Description</h3>
    <p><%= @dish.description %></p>
  </div>
</div>