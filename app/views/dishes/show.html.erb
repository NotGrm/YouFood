<%= render "shared/menu" %>
<div class="span9">
  <div class="page-header">
    <h1>D&eacute;tails</h1>
  </div>
  <div class="row-fluid">
    <p>
      <a class="btn" href="javascript:history.back()"><i class="icon-circle-arrow-left"></i>&nbsp;Pr&eacute;cedent</a>
    </p>
  </div>
  <div class="row-fluid">
    <div class="span4">
      <div class="span12">
      <span class="thumbnail">
        <img src="http://placehold.it/360x268" alt />
      </span>
      </div>
    </div>
    <div class="span8">
      <h1><%= @dish.name %></h1>
      <h6>Prix HT <%= sprintf "%.2f", @dish.priceHT %> &euro;</h6>
      <h6>Prix TTC <%= sprintf "%.2f", @dish.priceHT + @dish.priceHT * @dish.tva / 100 %> &euro;</h6>
      <p>
        <a href="#" class="btn btn-primary">Commander</a>
      </p>
    </div>
  </div>
  <div class="row-fluid">
    <h3>Description</h3>
    <p><%= @dish.description %></p>
  </div>
</div>